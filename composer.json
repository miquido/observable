{
    "name": "miquido/observable",
    "type": "library",
    "description": "Observable library",
    "version": "v1.0.0",
    "keywords": [
        "PHP",
        "Observable",
        "Stream",
        "Streams"
    ],
    "license": "MIT",
    "homepage": "https://github.com/miquido/observable",
    "authors": [
        {
            "name": "Pawe≈Ç Kocot",
            "email": "pawel.kocot@miquido.com",
            "homepage": "https://www.miquido.com"
        },
        {
            "name": "Konrad Obal",
            "email": "konrad.obal@miquido.com",
            "homepage": "https://www.miquido.com"
        }
    ],
    "require": {
        "php": "^7.1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpstan/phpstan": "^0.10.3",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Miquido\\Observable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Miquido\\Observable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": [
            "phpstan analyze src -l 7 --ansi",
            "phpstan analyze tests -l 5 -c phpstan.tests.neon --ansi",
            "php-cs-fixer fix -v --dry-run --diff --stop-on-violation --ansi"
        ],
        "test": [
            "@analyse",
            "@phpunit"
        ],
        "code-coverage": [
            "phpunit --coverage-clover clover.xml --colors=always"
        ],
        "fix": "php-cs-fixer fix -v --ansi",
        "phpunit": [
            "phpunit --colors=always"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
